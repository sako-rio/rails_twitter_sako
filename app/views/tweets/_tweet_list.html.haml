- if @tweets.present?
  .row
    .col-xs-offset-1
      %h2 検索結果
    .col-xs-10.col-xs-offset-1
      %ul.list-group
        - @tweets.each_with_index do |tweet, i|
          .list
            %li.list-group-item
              Tweet#{i}: #{tweet.contents}
    .col-xs-12.text-center
      = paginate @tweets, window: 2
