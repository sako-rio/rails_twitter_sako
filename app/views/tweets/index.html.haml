.content
  .row
    .col-xs-12.text-center.login-user-name
      ようこそ #{current_user.name} さん
    .col-xs-offset-5
      = video_tag 'twitter.mp4',
        autoplay: true, loop: true, autobuffer: true, width: '200PX'
    .col-xs-offset-5
      #search-box
        = form_tag('/tweets/search', method: :get) do
          = text_field_tag :tweet, nil, id: 'tweet_search', name: 'keyword',
            placeholder: 'キーワードを打ち込んでください', style: 'width: 200px;'
          %button.btn.btn-primary{ title: '検索', type: 'submit' } 検索
  #tweet_list
    = render partial: 'tweet_list'
